{% assign product = block.settings.product %}
{% assign avg_rating = product.title %}
{% assign product_price = product.price | money %}
{% assign price_parts = product_price | split: '.' %}


<div style="text-align: center; margin-bottom: 20px;">
  <span style="color:{{ block.settings.colour }}; font-size: 20px; font-weight: bold;">
    {{ avg_rating }}
  </span>

  <p style="font-size: 16px; margin-top: 10px;">
    Price: {{ product_price }}
  </p>

  <img src="{{ product.featured_image.src | img_url: '500x' }}" alt="{{ avg_rating }}" style="max-width: 100%; height: auto; margin-top: 10px;">
</div>

{% schema %}
{
  "name": "Show product",
  "target": "section",
  "settings": [
    { "type": "product", "id": "product", "label": "product", "autofill": true },
    { "type": "color", "id": "colour", "label": "Star Colour", "default": "#ff0000" }
  ]
}
{% endschema %}